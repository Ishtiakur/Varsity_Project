<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_pro"
    android:background="#dbf9f8f8"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    tools:context="com.example.shobojit.siuapp.Home.Activity.PRO">
    <android.support.v7.widget.Toolbar
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:id="@+id/protool"
        android:background="@color/colorPrimaryDark"></android.support.v7.widget.Toolbar>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/splash_screen_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/taz"
        app:civ_border_width="2dp"
        app:civ_border_color="#fffcfc" />

    <TextView
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/colorPrimary"
    android:textColor="#fff"
    android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
    android:gravity="center"
    android:textSize="15sp"
    android:textStyle="bold"
    android:text="Mr. Md. Tareq Uddin Taz"
    android:id="@+id/textView7" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        card_view:cardCornerRadius="20dp"
        android:background="#fff"
        android:layout_height="wrap_content">
    <TableLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:text="Designation : Director, Media and Public Relation's"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="Email : uddintaz@gmail.com "
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="Mobile No : 01711714295"
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="Web: siu.edu.bd"
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
        </TableRow>
    </TableLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
