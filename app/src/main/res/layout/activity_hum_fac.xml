<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/activity_hum_fac"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shobojit.siuapp.Home.Faculty_Activity.Hum_fac">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        app:title="School of Humanities"
        android:id="@+id/humtol"
        android:background="@color/colorPrimaryDark"
        android:layout_height="?attr/actionBarSize">

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"

        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="#000"
                android:background="@color/colorPrimaryDark"
                android:backgroundTint="@color/colorPrimary"
                android:text="English"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Faculty Members"
                android:textSize="15sp"
                android:id="@+id/csefac"
                android:background="#9575cd"
                android:backgroundTint="#b39ddb"
                android:gravity="center_vertical"/>
            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="2dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Syllabus"
                android:textSize="15sp"
                android:id="@+id/csesyl"
                android:background="#9575cd"
                android:backgroundTint="#b39ddb"
                android:gravity="center_vertical"/>
            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="2dp" />
            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="2dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>
